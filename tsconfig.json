{

	"compilerOptions": {
		"resolveJsonModule": true,
		"lib": ["ES2019", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"target": "ES2019",
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"downlevelIteration": true,
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"exclude": [
		"./tests/",
		"./node_modules/",
		"./dist/",
	  ],
	"include": [
		"hardhat.config.ts",
		"src/**/*.json",
		"src/**/*.ts",

	],

	"files": ["./hardhat.config.ts"]
}